.page-header
  %h4 Yazar Listesi
%table.table.table-striped
  %thead
    %tr
      %th #
      %th{:colspan => "2"} Yazar Adı
      %th Yazı Sayısı
      %th Yorum Sayısı
  %tbody
    - @users.each_with_index do |user, index|
      %tr
        %td= index + 1
        %td{:colspan => "2"}
          = link_to user.full_name, user_path(user)
        %td
          = user.posts.count
        %td
          = user.comments.count
