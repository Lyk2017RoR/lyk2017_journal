<div class="page-header">
  <h4>Yazar Listesi</h4>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>#</th>
      <th colspan="2">Yazar Adı</th>
      <th>Yazı Sayısı</th>
      <th>Yorum Sayısı</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each_with_index do |user, index| %>
      <tr>
        <td><%= index + 1 %></td>
        <td colspan="2">
          <%= link_to user.full_name, user_path(user) %>
        </td>
        <td>
          <%= user.posts.count %>
        </td>
        <td>
          <%= user.comments.count %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>