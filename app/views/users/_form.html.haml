= form_for @user do |f|
  - if @user.errors.present?
    .alert.alert-danger.fade.in.alert-dismissable
      %a.close{"aria-label" => "close", "data-dismiss" => "alert", :href => "#"} ×
      %h4 Hatalar
      %ul
        - @user.errors.full_messages.each do |message|
          %li= message
  .page-header
    %h4 Hesap Bilgileri
  .form-group
    = f.label :email
    = f.text_field :email, autofocus: true, autocomplete: :off, required: true, class: 'form-control'
  .form-group
    = f.label :password
    = f.password_field :password, autocomplete: :off, required: true, class: 'form-control'
  .form-group
    = f.label :password_confirmation
    = f.password_field :password_confirmation, autocomplete: :off, required: true, class: 'form-control'
  = f.fields_for :profile do |p|
    .page-header
      %h4 Kişisel Bilgiler
    .form-group
      = p.label :first_name
      = p.text_field :first_name, autocomplete: :off, required: true, class: 'form-control'
    .form-group
      = p.label :last_name
      = p.text_field :last_name, autocomplete: :off, required: true, class: 'form-control'
  - if @user.id.nil?
    .checkbox
      %label
        = f.check_box :terms_of_use, tabindex: 0, required: true
        Üyelik Sözleşmesi
  = f.button 'Kayıt Ol', class: 'btn btn-primary btn-block', type: :submit
#terms.modal.fade{"aria-labelledby" => "termsLabel", :role => "dialog", :tabindex => "-1"}
  .modal-dialog{:role => "document"}
    .modal-content
      .modal-header
        %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
          %span{"aria-hidden" => "true"} ×
        %h4#termsLabel.modal-title Site Kullanım Kuralları
